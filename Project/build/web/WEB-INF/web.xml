<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>UserLoginFilter</filter-name>
        <filter-class>filter.UserLoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdminLoginFilter</filter-name>
        <filter-class>filter.AdminLoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserLoginFilter</filter-name>
        <url-pattern>/addtocarthome</url-pattern>
        <url-pattern>/process</url-pattern>
        <url-pattern>/changepass</url-pattern>
        <url-pattern>/checkout</url-pattern>
        <url-pattern>/profile</url-pattern>    
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminLoginFilter</filter-name>
        <url-pattern>/admin-home</url-pattern>
        <url-pattern>/changerole</url-pattern>
        <url-pattern>/deleteaccount</url-pattern>
        <url-pattern>/admin-logout</url-pattern>
        <url-pattern>/add-admin</url-pattern>
        <url-pattern>/admin-addcategory</url-pattern>
        <url-pattern>/admin-addproduct</url-pattern>
        <url-pattern>/admin-profile</url-pattern>
        <url-pattern>/admin-settings</url-pattern>
        <url-pattern>/admin-user</url-pattern>
        <url-pattern>/admin-changepass</url-pattern>
        <url-pattern>/admin-changeprofile</url-pattern>
        <url-pattern>/admin-category</url-pattern>
        <url-pattern>/deleteproduct</url-pattern>
        <url-pattern>/admin-productlist</url-pattern>
        <url-pattern>/transaction-detail</url-pattern>
        <url-pattern>/admin-transaction</url-pattern>

    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
